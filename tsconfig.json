{
    "compilerOptions": {
        "module": "es2015",
        "target": "es6",
        "allowJs": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "outDir": "lib",
        "moduleResolution": "node",
        "removeComments": false,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "internals/",
        "build/",
        "lib/",
        "dist/"
    ],
    "include": [
        "src/**/*.ts"
    ]
}